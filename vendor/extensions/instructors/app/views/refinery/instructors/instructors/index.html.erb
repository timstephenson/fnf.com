<% content_for :body do %>

  <div class="row">
    <div class="col-xs-12">
      <h4>
        <%= t("refinery.instructors.instructors.current") %>
      </h4>
    </div>
  </div>

  <div class="row">
    <% @instructors.each do |instructor| %>
      <%= render partial: 'instructor', locals: { instructor: instructor } %>
    <%- end %>
  </div>

  <%- if @past_instructors.size > 0 %>
    <div class="row">
      <div class="col-xs-12">
        <h4>
          <%= t("refinery.instructors.instructors.past") %>
        </h4>
      </div>
    </div>
    
    <div class="row">
      <% @past_instructors.each do |instructor| %>
        <%= render partial: 'instructor', locals: { instructor: instructor } %>
      <%- end %>
    </div>
  <%- end %>

<% end %>


<%= render '/refinery/content_page' %>
