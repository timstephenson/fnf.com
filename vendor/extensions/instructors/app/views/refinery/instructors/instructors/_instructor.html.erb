<div class="col-sm-4 col-md-3 instructor">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to instructor.full_name, refinery.member_path(instructor) %>
      </h3>
    </div>

    <div class="panel-body short-bio">
      <%- if instructor.photo %>
        <%= image_tag instructor.photo.url, class: "img-responsive mb15" %>
      <%- end %>


      <div class="row">
        <div class="col-xs-12">
          <%=raw instructor.short_bio %>
        </div>              
      </div>

    </div>

    <div class="panel-footer">
      <div class="row">
        <div class="col-xs-12">
          <%= link_to t('refinery.instructors.instructors.read_more'), refinery.member_path(instructor), class: "pull-right" %>
        </div>
      </div>
    </div>
  </div>
</div>