<div class="col-sm-4 col-md-3 instructor">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to instructor.full_name, refinery.instructors_instructor_path(instructor) %>
      </h3>
    </div>

    <div class="panel-body">
      <%- if instructor.photo %>
        <%= image_tag instructor.photo.url, class: "img-responsive mb15" %>
      <%- end %>


      <div class="row">
        <div class="col-xs-12">
          <%=raw instructor.short_bio %>
        </div>              
      </div>

    </div>
  </div>
</div>