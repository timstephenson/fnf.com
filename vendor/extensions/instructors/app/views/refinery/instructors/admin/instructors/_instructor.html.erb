<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(instructor) -%>">
  <span class='title'>
    <%= instructor.full_name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.instructors_instructor_path(instructor), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_instructors_admin_instructor_path(instructor), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.instructors_admin_instructor_path(instructor), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: instructor.full_name)}}  ) %>
  </span>
</li>
